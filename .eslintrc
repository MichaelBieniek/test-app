{
	"env": {
		"browser": true,
		"jest": true
	},
	"extends": ["airbnb", "plugin:prettier/recommended"],
	"globals": {
		"shallow": true,
		"render": true,
		"mount": true
	},
	"parser": "babel-eslint",
	"rules": {
		"class-methods-use-this": 0,
		"import/no-named-as-default": 0,
		"import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
		"react/jsx-filename-extension": [
			"error",
			{
				"extensions": [".js", ".jsx"]
			}
		]
	}
}
